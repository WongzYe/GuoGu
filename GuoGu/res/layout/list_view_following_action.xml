<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="3dp"
        android:layout_marginRight="0dp" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_toRightOf="@id/avatar"
        android:text="test"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_toRightOf="@id/user_name"
        android:text="点评了"
        android:textSize="13sp" />

    <RelativeLayout
        android:id="@+id/goods_bar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/user_name"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/avatar"
        android:background="#F8F8F8" >

        <ImageView
            android:id="@+id/goods_img"
            android:layout_width="98dp"
            android:layout_height="98dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="2dp" />

        <TextView
            android:id="@+id/goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/goods_img"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/goods_name"
            android:layout_toRightOf="@id/goods_img"
            android:layout_marginLeft="5dp"
            android:textColor="#2196F3"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_bar"
        android:layout_margin="3dp"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@id/avatar"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/likes"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_below="@id/comment"
        android:layout_margin="3dp"
        android:layout_toRightOf="@id/avatar"
        android:src="@drawable/icon_poke" />

    <TextView
        android:id="@+id/poke_nums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment"
        android:layout_margin="3dp"
        android:layout_marginLeft="0dp"
        android:layout_toRightOf="@id/likes"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/post_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/goods_bar"
        android:layout_margin="3dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="4dp"
        android:text="2015-4-22"
        android:textSize="10sp" />

</RelativeLayout>