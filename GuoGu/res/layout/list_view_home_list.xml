<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/home_item_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <TableLayout
            android:id="@+id/table_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="4dp"
            android:stretchColumns="*" >

            <TableRow>

                <LinearLayout
                    android:id="@+id/concentrate_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFE57F"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="精选"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="5dp"
                        android:text="每日精评 不劳筛选"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/popular_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#B3E5FC"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="热门"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="5dp"
                        android:text="火热商品 一目了然"
                        android:textSize="11sp" />
                </LinearLayout>
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/category_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/table_layout"
            android:layout_margin="3dp"
            android:text="热门品类"
            android:textSize="11sp" />

        <TableLayout
            android:id="@+id/hot_category_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/category_title"
            android:layout_margin="3dp"
            android:shrinkColumns="*"
            android:stretchColumns="*" >

            <TableRow>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="#E0E0E0"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/hot_category_img_1"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center_horizontal|center_vertical" />

                    <TextView
                        android:id="@+id/hot_category_name_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="3dp"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="#E0E0E0"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/hot_category_img_2"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center_horizontal|center_vertical" />

                    <TextView
                        android:id="@+id/hot_category_name_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="3dp"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="#E0E0E0"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/hot_category_img_3"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center_horizontal|center_vertical" />

                    <TextView
                        android:id="@+id/hot_category_name_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="3dp"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="#E0E0E0"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/hot_category_img_4"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center_horizontal|center_vertical" />

                    <TextView
                        android:id="@+id/hot_category_name_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="3dp"
                        android:textSize="10sp" />
                </LinearLayout>
            </TableRow>

            <TableRow>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="#E0E0E0"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/hot_category_img_5"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center_horizontal|center_vertical" />

                    <TextView
                        android:id="@+id/hot_category_name_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="3dp"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="#E0E0E0"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/hot_category_img_6"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center_horizontal|center_vertical" />

                    <TextView
                        android:id="@+id/hot_category_name_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="3dp"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="#E0E0E0"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/hot_category_img_7"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center_horizontal|center_vertical" />

                    <TextView
                        android:id="@+id/hot_category_name_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="3dp"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="#E0E0E0"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/hot_category_img_8"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center_horizontal|center_vertical" />

                    <TextView
                        android:id="@+id/hot_category_name_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="3dp"
                        android:textSize="10sp" />
                </LinearLayout>
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/new_arrived"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hot_category_layout"
            android:layout_margin="5dp"
            android:text="新品推荐"
            android:textSize="11sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_item_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <ImageView
            android:id="@+id/goods_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="3dp"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/goods_img"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/currency_symbols"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/goods_img"
            android:text="￥"
            android:textColor="#2196F3"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/currency_symbols"
            android:textColor="#2196F3"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/favorite"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="12dp"
            android:src="@drawable/icon_unlike" />
    </RelativeLayout>

</LinearLayout>