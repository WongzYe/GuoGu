<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/goods_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10" 
        android:background="#FFFFFF"/>

    <RelativeLayout
        android:id="@+id/bootom_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" 
        android:background="#FFFFFF">
        
        <ImageView 
            android:id="@+id/favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="3dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/icon_unlike"/>

        <TextView
            android:id="@+id/favorite_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="2dp"
            android:layout_toRightOf="@id/favorite"
            android:text="喜爱"
            android:textSize="14sp" />
        
        <TextView 
            android:id="@+id/favorite_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/favorite_text"
            android:layout_centerVertical="true"
            android:textSize="12sp"
            android:text="0"/>
        
        <TextView
            android:id="@+id/passed_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="2dp"
            android:layout_marginBottom="15dp" 
            android:textSize="10sp"/>
        
        <ImageView 
            android:id="@+id/poster_avatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/passed_time"
            android:layout_margin="2dp"
            android:src="@drawable/wongzye"/>

    </RelativeLayout>

</LinearLayout>